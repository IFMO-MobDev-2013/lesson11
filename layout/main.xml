<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#00A"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/learn_button"
            android:onClick="startLearning"
            android:id="@+id/button" android:layout_gravity="center"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/test_word"
            android:onClick="startImagesActivity"
            android:layout_gravity="center"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/test_image"
            android:onClick="startWordsActivity"
            android:layout_gravity="center"/>
</LinearLayout>

