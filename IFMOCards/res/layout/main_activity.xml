<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="150dp" android:layout_centerVertical="true" android:layout_centerHorizontal="true">
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:text="@string/categories"
                android:id="@+id/button" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:text="@string/help"
                android:id="@+id/button2" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/stats"
            android:id="@+id/button3" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>