<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_gravity="center" android:textIsSelectable="false"
            android:textSize="36dp" android:textAlignment="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:id="@+id/button" android:layout_gravity="center_horizontal|top" android:layout_weight="1"
                android:onClick="onYesClick"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/button1" android:layout_gravity="center_horizontal|top" android:layout_weight="1"
                android:onClick="onNoClick"/>
    </LinearLayout>
</LinearLayout>