<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/using_word"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="27dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp" android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/word_picture"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/target_word"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginBottom="8dp" android:textSize="27dp" android:textStyle="bold"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="✔"
                android:id="@+id/word_yes"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:enabled="false" android:visibility="invisible"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="✘"
                android:id="@+id/word_no"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_light"
                android:enabled="false" android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>