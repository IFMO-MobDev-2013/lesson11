<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/fone2">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:id="@+id/textView" android:layout_gravity="center"
            android:textSize="32dp" android:textStyle="bold|italic" android:textIsSelectable="false"
            android:singleLine="false" android:phoneNumber="false" android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button1"
            android:textColor="@android:color/white"
            android:background="@drawable/greenitem"
            android:id="@+id/button" android:layout_gravity="center" android:layout_weight="1.8"
            android:textSize="30dp" android:onClick="randomGame"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button2"
            android:textColor="@android:color/white"
            android:background="@drawable/textviewgrad"
            android:id="@+id/button1" android:layout_gravity="center" android:layout_weight="1.8"
            android:textSize="30dp" android:onClick="customPlay"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:textSize="18dp"
            android:id="@+id/textView1" android:layout_gravity="center" android:layout_weight="1.6"
            android:gravity="center_vertical|center_horizontal" android:phoneNumber="false"/>
</LinearLayout>