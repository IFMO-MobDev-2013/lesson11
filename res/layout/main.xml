<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash Cards"
            android:id="@+id/textView" android:layout_gravity="center" android:textColor="#4D4D4D"
            android:textSize="40dp" android:gravity="top" android:paddingTop="50dp" android:paddingLeft="20dp"
            android:paddingRight="20dp" android:paddingBottom="20dp" android:textStyle="bold"
            android:layout_marginBottom="25dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center|bottom" android:padding="15dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You know"
                android:id="@+id/textView1" android:layout_gravity="center" android:textColor="#919191"
                android:textSize="20dp" android:padding="5dp"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/nativelang" android:layout_gravity="center" android:layout_weight="1"
                android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center|bottom" android:padding="15dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You study"
                android:id="@+id/textView2" android:layout_gravity="center" android:textColor="#919191"
                android:textSize="20dp" android:padding="5dp"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/studiedlang" android:layout_gravity="center" android:layout_weight="1"
                android:clickable="true"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start!"
            android:id="@+id/button" android:layout_gravity="center"
            android:textColor="#757575" android:textSize="30dp" android:paddingLeft="35dp" android:paddingRight="35dp"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:onClick="chooseCategory" android:layout_marginTop="50dp"/>
</LinearLayout>

