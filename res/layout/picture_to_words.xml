<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_sample"
            android:id="@+id/textView5" android:textSize="40dp" android:typeface="monospace"
            android:textStyle="italic" android:gravity="center"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="8">
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView" android:src="@drawable/unavailable" android:layout_margin="5dp"
                android:layout_centerInParent="true"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2" android:layout_centerInParent="true" android:src="@drawable/correct"
                android:visibility="invisible"/>
    </RelativeLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_sample"
                    android:id="@+id/textView" android:gravity="center" android:layout_margin="5dp"
                    android:layout_weight="1" android:textSize="30dp" android:textStyle="bold"
                    android:clickable="true" android:enabled="true" android:focusable="true"
                    android:focusableInTouchMode="true" android:editable="false"
                    android:background="@drawable/clickable_background"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_sample"
                    android:id="@+id/textView2" android:gravity="center" android:layout_margin="5dp"
                    android:layout_weight="1" android:textSize="30dp" android:textStyle="bold"
                    android:background="@drawable/clickable_background" android:focusableInTouchMode="true"
                    android:focusable="true" android:clickable="true" android:enabled="true" android:editable="false"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_sample"
                    android:id="@+id/textView3" android:gravity="center" android:layout_margin="5dp"
                    android:layout_weight="1" android:textSize="30dp" android:typeface="normal"
                    android:textStyle="bold" android:clickable="true" android:enabled="true" android:focusable="true"
                    android:focusableInTouchMode="true" android:background="@drawable/clickable_background"
                    android:singleLine="false"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/text_sample"
                    android:id="@+id/textView4" android:gravity="center" android:layout_margin="5dp"
                    android:layout_weight="1" android:textSize="30dp" android:textIsSelectable="true"
                    android:textStyle="bold" android:clickable="true" android:focusableInTouchMode="true"
                    android:focusable="true" android:enabled="true"
                    android:background="@drawable/clickable_background"/>
        </TableRow>
    </TableLayout>
</LinearLayout>