<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/choose"
            android:background="@drawable/textviewgrad"
            android:textColor="@android:color/white"
            android:id="@+id/textView" android:layout_gravity="center" android:layout_weight="0"
            android:gravity="center_vertical|center_horizontal" android:textSize="25dp"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listView" android:layout_gravity="center"/>
</LinearLayout>