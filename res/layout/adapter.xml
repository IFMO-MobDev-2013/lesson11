<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/catPict" android:layout_marginLeft="3dp" android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent" android:layout_weight="15">
        <TextView
                android:id="@+id/cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:descendantFocusability="blocksDescendants"
                android:layout_gravity="center_vertical|left" android:layout_marginLeft="5dp"
                android:layout_weight="2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cat_under" android:textSize="13dp" android:textStyle="italic"
                android:layout_marginLeft="8dp" android:layout_gravity="center_vertical" android:layout_weight="1"/>
    </LinearLayout>

    <TextView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:descendantFocusability="blocksDescendants" android:layout_weight="3"
            android:layout_gravity="center_vertical"/>

</LinearLayout>