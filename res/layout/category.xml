<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:id="@+id/categoryDescription" android:textSize="35dp" android:layout_marginRight="5dp"
            android:gravity="center_vertical|left" android:layout_gravity="center_vertical|bottom|left|right|top"
            android:text="@string/category"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/categoryMark" android:contentDescription="@drawable/unavailable"
            android:src="@drawable/unavailable" android:layout_gravity="center_horizontal"/>
</LinearLayout>